@model IEnumerable<Mshop.Models.MItem>

@{
    ViewData["Title"] = "ExistingItem";
      Layout = "_AdminLayout";
}

<h1>ExistingItem</h1>

<p>
    <a class="btn btn-danger btn-lg" asp-action="AddItem">Add New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ItemCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <img src="@item.MainImage"  class="rounded" style="max-width:20px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePrice)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ItemCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Edit Item"><i class="fa fa-pen-square" aria-hidden="true"></i></a> |
                <a asp-action="DetailItem" asp-route-id="@item.Id" class="btn   btn-outline-info" title="Detail Item"><i class="fa fa-eye" aria-hidden="true"></i></a> |
                <a asp-action="DeleteItem" id="delcat" asp-route-id="@item.Id" class="btn   btn-outline-danger" title="Delete Item"><i class="fa fa-trash" aria-hidden="true"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
