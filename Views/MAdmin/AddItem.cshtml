@model Mshop.Models.MItem

@{
    ViewData["Title"] = "AddItem";
      Layout = "_AdminLayout";
}

<h1>Add New Item</h1>

 
<hr />
<div class="row">
    <div class="col-sm-12">
        <form asp-action="AddItem" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row col-sm-10">
                <div class="form-group col-sm-5">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-5">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row col-sm-10">
                <div class="form-group col-sm-5">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-5">
                    <label asp-for="CostPrice" class="control-label"></label>
                    <input asp-for="CostPrice" class="form-control" />
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="row col-sm-10">
                <div class="form-group col-sm-5">
                    <label asp-for="SalePrice" class="control-label"></label>
                    <input asp-for="SalePrice" class="form-control" />
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-5">
                    <label asp-for="MainImage" class="control-label"></label>
                    <input asp-for="MainImage" class="form-control" type="file" multiple />
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>
            </div>
            <div class="row col-sm-10">
                <div class="form-group col-sm-5">
                    <label asp-for="ItemCode" class="control-label"></label>
                    <input asp-for="ItemCode" class="form-control" />
                    <span asp-validation-for="ItemCode" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-5">
                    <label asp-for="ItemCategory" class="control-label"></label>
                    <input asp-for="ItemCategory" class="form-control" />
                    <span asp-validation-for="ItemCategory" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-sm-5">
                <input type="submit" value="Add Item" class="btn btn-danger" />
            </div>
            <div class="form-group col-sm-5">
                <a class="btn btn-outline-danger" asp-action="ExistingItem">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

