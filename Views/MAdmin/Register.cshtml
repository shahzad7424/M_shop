@model Mshop.Models.MUser
 @{ 
    ViewData["Title"] = "Register";
    Layout = "_UserLayout";
}

<div class="container col-sm-5 border-danger">
    <br />

    <h1 class="text-center text-white">M <i class="fas fa-laugh-wink"></i> Shop</h1>
    <h3 class="text-center text-white">Register</h3>
    <br />

    <div class="center">
        <form asp-action="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="text-white control-label" asp-for="Username"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter Name..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label text-white"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label text-white"></label>
                <input asp-for="DisplayName" class="form-control"  placeholder="Enter a Unique Profile Name..." />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label text-white"></label>
                <input asp-for="ProfilePicture" class="form-control" type="file" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-white"></label>
                <input asp-for="Email" class="form-control" type="password" placeholder="Enter a Unique Profile Name..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <br />
            <div class="form-group">
                <input type="submit" value="      Register      " class="btn text-white btn-block btn-lg btn-outline-danger" />
            </div>
            <div class="form-group">
                <a asp-action="Login" class="btn btn-block btn-lg btn-danger">      Login      </a>
            </div>



        </form>
    </div>
</div>


